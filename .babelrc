{
  "exclude": "node_modules/**",
  "presets": [
    ["@babel/preset-stage-0", {
      "decoratorsLegacy": true
    }],
    ["@babel/preset-env", {
      "modules": "commonjs",
      "targets": {
        "browsers": ["last 2 versions", "ie >= 9"]
      }
    }],
    "@babel/preset-typescript"
  ],
  "plugins": [
    "@babel/plugin-proposal-class-properties"
  ]
}
